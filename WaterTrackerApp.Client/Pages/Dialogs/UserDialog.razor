@using Microsoft.AspNetCore.Components.Forms
@using WaterTrackerApp.Client
@using WaterTrackerApp.Client.Dtos
@using WaterTrackerApp.Client.Layout

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" Model="User" OnValidSubmit="HandleValidSubmit">
            <MudTextField @bind-Value="User.FirstName" Label="First Name" For="@(() => User.FirstName)" Required="true" />
            <MudTextField @bind-Value="User.Surname" Label="Surname" For="@(() => User.Surname)" />
            <MudTextField @bind-Value="User.Email" Label="Email" For="@(() => User.Email)" Required="true" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="Submit" >@ButtonText</MudButton>
        <MudButton Color="Color.Default" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

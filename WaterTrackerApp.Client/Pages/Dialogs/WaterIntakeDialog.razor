@using Microsoft.AspNetCore.Components.Forms
@using WaterTrackerApp.Client
@using WaterTrackerApp.Client.Dtos
@using WaterTrackerApp.Client.Layout

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" Model="WaterIntake" OnValidSubmit="HandleValidSubmit">
            <MudText Typo="Typo.caption" Class="mb-1">Intake Date</MudText>
            <InputDate class="form-control" @bind-Value="WaterIntake.IntakeDate" />
            <MudNumericField @bind-Value="WaterIntake.ConsumedWater" Label="Consumed Water (ml)" For="@(() => WaterIntake.ConsumedWater)"
                             Min="0" Required="true" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="Submit">@ButtonText</MudButton>
        <MudButton Color="Color.Default" OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>
